<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Service">

    <LinearLayout
        android:layout_marginTop="7pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="8pt"
            android:id="@+id/pic_lk"
            android:layout_width="90dp"
            android:layout_gravity="left"
            android:layout_height="70dp"
            android:onClick="home"></ImageView>

        <TextView
            android:layout_marginRight="20pt"
            android:layout_marginLeft="7pt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:text="Расписание"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000000"
            android:textSize="12pt"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="3pt"
        android:layout_marginRight="10pt">

        <TextView
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="7pt"
            android:fontFamily="serif"
            android:gravity="left"
            android:text="Станция"
            android:textColor="#000000"></TextView>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3pt"
        android:layout_marginRight="10pt"
        android:layout_marginLeft="10pt">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:fontFamily="serif"
            android:textSize="7pt"
            android:gravity="left"
            android:text="Время приезда поездов"
            android:textColor="#000000"></TextView>

        <TextView
            android:id="@+id/id"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="13pt"
            android:textColor="#00F"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/stat"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="7pt"
            android:background="#C97DD7FF"
            android:fontFamily="serif"
            android:onClick="save"
            android:text="Показать расписание"
            android:textColor="#000000"></Button>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:textSize="7pt"
            android:layout_gravity="center"
            android:background="#C97DD7FF"
            android:fontFamily="serif"
            android:onClick="buy"
            android:text="Купить билет">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pic_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>
    </LinearLayout>


</LinearLayout>
